{
  "name": "@byline/shared",
  "private": false,
  "license": "AGPL",
  "version": "0.1.0",
  "description": "Byline CMS shared package",
  "keywords": [
    "cms",
    "headless cms",
    "content management"
  ],
  "homepage": "https://github.com/Byline-CMS/bylinecms.dev",
  "bugs": {
    "url": "https://github.com/Byline-CMS/bylinecms.dev/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Byline-CMS/bylinecms.dev.git",
    "directory": "packages/shared"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./crypto": {
      "types": "./dist/crypto.d.ts",
      "import": "./dist/crypto.js",
      "default": "./dist/crypto.js"
    },
    "./passwords": {
      "types": "./dist/passwords.d.ts",
      "import": "./dist/passwords.js",
      "default": "./dist/passwords.js"
    },
    "./schemas": {
      "types": "./dist/schemas.d.ts",
      "import": "./dist/schemas.js",
      "default": "./dist/schemas.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "clean": "rm -rf node_modules dist .turbo",
    "test": "vitest run",
    "lint": "biome check --write --unsafe --diagnostic-level=error"
  },
  "dependencies": {
    "argon2": "^0.44.0",
    "dotenv": "^17.2.2",
    "jose": "^6.1.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "default": "./dist/index.js"
      },
      "./crypto": {
        "types": "./dist/crypto.d.ts",
        "import": "./dist/crypto.js",
        "default": "./dist/crypto.js"
      },
      "./passwords": {
        "types": "./dist/passwords.d.ts",
        "import": "./dist/passwords.js",
        "default": "./dist/passwords.js"
      },
      "./schemas": {
        "types": "./dist/schemas.d.ts",
        "import": "./dist/schemas.js",
        "default": "./dist/schemas.js"
      }
    },
    "registry": "https://registry.npmjs.org/"
  }
}
