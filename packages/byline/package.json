{
  "name": "@byline/byline",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "chokidar 'src/collections/**/*' -c 'npm-run-all build'",
    "build": "tsc -p tsconfig.json",
    "skip": "tsx ./scripts/task-watch.js",
    "test": "LOG_LEVEL=off tsx --test $(find . -name \"*.test.ts\")",
    "test:one": "LOG_LEVEL=off tsx --no-warnings --env-file=.env --test",
    "clean": "rimraf node_modules dist build .turbo"
  },
  "exports": {
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    },
    "./drizzle-schemas": {
      "types": "./dist/output/drizzle-schemas/index.d.ts",
      "import": "./dist/output/drizzle-schemas/index.js",
      "require": "./dist/output/drizzle-schemas/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@byline/shared": "workspace:*",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.3",
    "intl-messageformat": "^10.7.16",
    "jose": "^6.0.12",
    "npm-run-all": "^4.1.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.60.0",
    "uuid": "^11.1.0",
    "zod": "^4.0.5",
    "zod-form-data": "^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/node": "^24.0.14",
    "@types/nodemailer": "^6.4.17",
    "@types/nodemailer-html-to-text": "^3.1.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "chokidar": "^4.0.3",
    "chokidar-cli": "^3.0.0",
    "classnames": "^2.5.1",
    "tsx": "^4.20.3",
    "typescript": "5.8.3"
  }
}