{
  "name": "@byline/storage-local",
  "private": false,
  "license": "MPL-2.0",
  "version": "0.1.0",
  "description": "Byline CMS local filesystem storage provider",
  "keywords": [
    "cms",
    "headless cms",
    "content management",
    "storage"
  ],
  "homepage": "https://github.com/Byline-CMS/bylinecms.dev",
  "bugs": {
    "url": "https://github.com/Byline-CMS/bylinecms.dev/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Byline-CMS/bylinecms.dev.git",
    "directory": "packages/storage-local"
  },
  "type": "module",
  "main": "dist/index.js",
  "index": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "chokidar 'src/**/*' -c 'npm-run-all build'",
    "build": "tsc -p tsconfig.json && tsc-alias",
    "clean": "rimraf node_modules dist build .turbo",
    "lint": "biome check --write --unsafe --diagnostic-level=error",
    "skip": "tsx ./scripts/task-watch.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@byline/core": "workspace:*",
    "npm-run-all": "^4.1.5",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@types/node": "^25.3.2",
    "chokidar": "^5.0.0",
    "chokidar-cli": "^3.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "5.9.3"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.js"
      },
      "./package.json": "./package.json"
    }
  }
}
