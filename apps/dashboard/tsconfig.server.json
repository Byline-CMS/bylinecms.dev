{
  "compilerOptions": {
    "composite": true,
    "lib": ["es2022"],
    "module": "NodeNext",
    "target": "es2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "noImplicitAny": false,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "noEmit": false,
    "outDir": "./build",
    "skipLibCheck": true,
    "baseUrl": "./",
    "strict": true
  },
  "include": [
    "database/**/*",
    "server/**/*",
    "byline/**/*",
    "byline.client.config.ts",
    "byline.server.config.ts"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
