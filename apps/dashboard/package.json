{
  "name": "@byline/dashboard",
  "private": false,
  "license": "AGPL",
  "version": "0.1.0",
  "description": "Byline CMS dashboard app",
  "keywords": [
    "cms",
    "headless cms",
    "content management"
  ],
  "homepage": "https://github.com/Byline-CMS/bylinecms.dev",
  "bugs": {
    "url": "https://github.com/Byline-CMS/bylinecms.dev/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Byline-CMS/bylinecms.dev.git",
    "directory": "apps/dashboard"
  },
  "type": "module",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:app": "vite",
    "dev:server": "tsx --env-file=.env --watch server/index.ts",
    "build": "run-s build:*",
    "build:server": "tsc -p tsconfig.server.json",
    "build:app": "tsc -p tsconfig.json && vite build",
    "preview": "run-p preview:*",
    "preview:server": "NODE_ENV=production node --env-file=.env ./build/server/index.js",
    "preview:app": "vite preview",
    "clean": "rimraf node_modules dist build .turbo ",
    "db:init": "cd database && ./db_init.sh",
    "drizzle:generate": "tsc -p tsconfig.json && drizzle-kit generate --config=drizzle.config.ts",
    "drizzle:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "drizzle:push": "tsc -p tsconfig.json && drizzle-kit push --config=drizzle.config.ts",
    "drizzle:drop": "drizzle-kit drop --config=drizzle.config.ts",
    "drizzle:seed": "tsx --no-warnings --env-file=.env ./database/seeds/index.ts",
    "test": "LOG_LEVEL=off tsx --env-file=.env --test $(find . -name \"*.test.ts\")",
    "test:one": "LOG_LEVEL=off tsx --no-warnings --env-file=.env --test"
  },
  "dependencies": {
    "@byline/core": "workspace:*",
    "@byline/db-postgres": "workspace:*",
    "@byline/shared": "workspace:*",
    "@byline/uikit": "workspace:*",
    "@fastify/cors": "^11.0.1",
    "@lexical/clipboard": "0.33.1",
    "@lexical/code": "0.33.1",
    "@lexical/hashtag": "0.33.1",
    "@lexical/headless": "0.33.1",
    "@lexical/html": "0.33.1",
    "@lexical/link": "0.33.1",
    "@lexical/list": "0.33.1",
    "@lexical/mark": "0.33.1",
    "@lexical/markdown": "0.33.1",
    "@lexical/overflow": "0.33.1",
    "@lexical/react": "0.33.1",
    "@lexical/rich-text": "0.33.1",
    "@lexical/selection": "0.33.1",
    "@lexical/table": "0.33.1",
    "@lexical/utils": "0.33.1",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-router": "^1.129.0",
    "@tanstack/react-router-devtools": "^1.129.0",
    "fastify": "^5.4.0",
    "intl-messageformat": "^10.7.16",
    "jose": "^6.0.12",
    "lexical": "0.33.1",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.60.0",
    "react-json-view-lite": "^2.4.1",
    "uuid": "^11.1.0",
    "zod": "^4.0.5",
    "zod-form-data": "^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/router-plugin": "^1.129.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.0.15",
    "@types/nodemailer": "^6.4.17",
    "@types/nodemailer-html-to-text": "^3.1.3",
    "@types/pg": "^8.15.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "classnames": "^2.5.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.3",
    "prettier": "^3.6.2",
    "tailwindcss": "4.1.11",
    "tsx": "^4.20.3",
    "typescript": "5.8.3",
    "vite": "^7.0.5"
  }
}